<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.saltstudios.ftdiscovery.exeterdiningapp.MainActivity">

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/bFood"
        android:layout_below="@+id/openTimes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="315dp" />

    <TextView
        android:text="Opening Hours: 7:00 - 9:00 AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/openTimes"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        tools:background="@android:color/darker_gray"
        tools:backgroundTint="@android:color/darker_gray"
        android:backgroundTintMode="src_atop"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:backgroundTint="@android:color/darker_gray"
        android:background="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Hmm... there doesn't seem to be anything for today."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/excuse"
        android:layout_below="@+id/bFood"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="0dp"
        android:fontFamily="sans-serif-smallcaps" />

</RelativeLayout>
